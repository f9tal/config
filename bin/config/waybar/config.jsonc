{
	"layer": "top",	
	"position": "top",
    "height": 40,

    "modules-left": ["niri/workspaces", "niri/window"],
    "modules-center": [],
    "modules-right": ["group/system-tray", "tray"],

    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "temperature"
        ]
    },

    "group/system-tray": {
        "orientation": "horizontal",
        "modules": [
            "mpris",
            "custom/network",
            "disk",
            "backlight",
            "pulseaudio",
            "battery",
            "custom/weather",
            "clock"
        ]
    },

    /* --- Left Modules --- */
	"niri/workspaces": {
        "disable-scroll": true,
        "disable-markup": true,
        "format": "{index}" 
    },
	"niri/window": {
    	"format": "{}",
    	"max-length": 150
    },

   
    "custom/weather": {
        "format": "{}",
        "exec": "~/.config/waybar/weather.sh",
        "interval": 3600,
        "tooltip": true
    },
    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": " Paused",
        "format-stopped": "",
        "player-icons": {
            "default": "",
            "mpv": "🎵",
            "spotify": ""
        },
        "max-length": 27
    },
    "custom/updates": {
        "format": " {}",
        "tooltip": true,
        "tooltip-format": "{} pending updates",
        "exec": "checkupdates | wc -l",
        "exec-if": "which checkupdates",
        "interval": 3600
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "{free} free out of {total}",
      "on-click": "$HOME/.config/waybar/btrfs-assistant.sh",
    },
    "temperature": {
	   	"thermal-zone": 0,
		"format": "{icon} {temperatureC}°C",
		"format-icons":[""],
		"interval": 30
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false,
        "interval": 10
    },
    "memory": {
        "format": " {}%",
        "format-alt": " {used}GB/{total}GB",
        "interval": 30
    },
    "custom/network": {
        "format": " {}%",
        "exec": "~/.config/waybar/network-status.sh",
        "interval": 30,
        "tooltip": true,
        "tooltip-format": "Wi-Fi Signal Strength",
        "format-disconnected": "󰖪 Disconnected",
        "format-warning": " {}%",
        "format-critical": " {}%",
        "critical-threshold": 20,
        "warning-threshold": 50,
        "on-click": "alacritty -e nmtui"
    },
	"backlight": {
    	"device": "intel_backlight",
    	"format": "{icon} {percent}%",
    	"format-icons": ["󰃞", "󰃟", "󰃠", "󰃠"],
    	"interval": 60
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": " {volume}%",
        "format-muted":"󰖁 Mute",
        "interval": 60,
        "format-icons": {
            "default": ["", ""]
        },
       "on-click": "pwvucontrol",
       "on-scroll-up": "",
       "on-scroll-down": ""
    },
    "battery": {
        "bat": "BAT0",
        "states": {
              "warning": 20,
              "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "interval": 30
    },
    "clock": {
        "format": " {:%a %b %d %R}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "interval": 30
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
}
